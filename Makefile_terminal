#https://www.cs.bu.edu/teaching/cpp/writing-makefiles/
# Makefile for Writing Make Files Example

# *****************************************************
# Variables to control Makefile operation

CXX = g++
CXXFLAGS = -Wall -g

# ****************************************************
# Targets needed to bring the executable up to date

escalona: escalona.o Esc.o Tx.o EvTx.o Graph.o TxIdx.o Log.o 
	$(CXX) $(CXXFLAGS) -o escalona escalona.o Esc.o Tx.o EvTx.o Graph.o  TxIdx.o Log.o 

# The main.o target can be written more simply

escalona.o: escalona.cpp Esc.h Log.h Tx.h EvTx.h Graph.h TxIdx.h
	$(CXX) $(CXXFLAGS) -c escalona.cpp

Esc.o: Esc.h Log.h

Log.o: Log.h
	
Tx.o: Tx.h

EvTx.o: EvTx.h 

Graph.o: Graph.h
	
Log.o: Log.h
	
TxIdx.o: TxIdx.h